<% layout("layouts/boilerplate") %>

<div class="row">
  <h1 class="text-center">Edit CampGround</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          value="<%= campground.title %>"
          required
        />
        <div class="invalid-feedback">Please choose a title.</div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          value="<%= campground.location %>"
          required
        />
        <div class="invalid-feedback">Please choose a location.</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="">Upload imagess</label>
        <div class="custom-file">
          <input
            type="file"
            class="custom-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="custom-file-label" for="image"
            >Add more image(s)...</label
          >
        </div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          required
        >
<%= campground.description %></textarea
        >
        <div class="invalid-feedback">Please write a description.</div>
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>

        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="text"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            id="price"
            name="campground[price]"
            placeholder="0.00"
            value="<%= campground.price %> "
            required
          />
          <div class="invalid-feedback">Please choose a price.</div>
        </div>
      </div>

      <div class="mb-3">
        <% campground.images.forEach((image)=>{ %>

        <div class="form-check-inline">
          <img src="<%= image.thumbnail %>" class="img-thumbnail" alt="" />
          <input
            type="checkbox"
            class="form-check-input"
            id="<%= image._id %>"
            name="deleteImages[]"
            value="<%= image.filename %>"
          />
          <label for="<%= image._id %>">Delete?</label>
        </div>

        <% }) %>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update CampGround</button>
      </div>
    </form>

    <a href="/campgrounds/<%= campground._id %> ">Back to Campground</a>
  </div>
</div>
